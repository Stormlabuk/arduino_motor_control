
<launch>
    <group ns="sampler">
        <rosparam file="$(find ring_ctrl)/config/sampler_b1.yaml" />
    </group>
    <node pkg="rosserial_python" type="serial_node.py" name="servo" output="screen">
        <param name="port" value="/dev/ttyACM0" />
    </node>
    <rosparam param="MOTOR_SPEED">15</rosparam>
    <rosparam param="ROTOR_D">5</rosparam>
    <node pkg="rosserial_python" type="serial_node.py" name="stepper" output="screen">
        <param name="port" value="/dev/ttyACM1" />
    </node>
    <node pkg="ring_ctrl" type="sampling_func.py" name="sampler" output="screen">
        <!-- <param name="baud" value="57600" /> -->
        <param name = "initial_field_scale" value="0.5"/>
    </node>
</launch>
